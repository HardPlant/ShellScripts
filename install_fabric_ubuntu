#curl -s -L goo.gl/VHvsyp | sudo bash

#curl
apt -y install curl wget

#Go
GVERSION="1.8.3"
GFILE="go$GVERSION.linux-amd64.tar.gz"

GOROOT="/usr/local/go"
sudo wget --no-verbose https://storage.googleapis.com/golang/$GFILE -O /tmp/$GFILE

tar -C "/usr/local" -xzf /tmp/$GFILE

cp -f "$HOME/.bashrc" "$HOME/.bashrc.bkp"

touch "$HOME/.bashrc"
{
    echo ''
    echo '# GOLANG'
    echo 'export GOROOT='$GOROOT
    echo 'export GOPATH='$GOPATH
    echo 'export GOBIN=$GOPATH/bin'
    echo 'export PATH=$PATH:$GOROOT/bin:$GOBIN'
    echo ''
} >> "$HOME/.bashrc"
source "$HOME/.bashrc"
echo "GOROOT set to $GOROOT"

rm -f /tmp/$GFILE

# docker

sudo apt-get update
sudo apt-get -y install apt-transport-https ca-certificates curl software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu$(lsb_release -cs) stable"
sudo apt-get update
sudo apt-get -yinstall docker-ce

sudo service docker start

curl -sSL https://goo.gl/6wtTN5 | bash -s 1.1.0
